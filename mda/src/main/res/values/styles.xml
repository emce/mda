<resources>

    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textViewStyle">@style/FontTextView</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="actionModeStyle">@style/ActionMode</item>
    </style>

    <style name="ToolbarStandard" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textViewStyle">@style/FontTextView</item>
        <item name="fontPath">RobotoCondensed-Bold.ttf</item>
    </style>

    <style name="ToolbarOverflow" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/primary</item>
        <item name="actionMenuTextColor">@color/primary</item>
        <item name="android:textColorSecondary">@color/primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textViewStyle">@style/FontTextView</item>
        <item name="fontPath">RobotoCondensed-Bold.ttf</item>
    </style>

    <style name="FontTextView" parent="android:Widget.TextView">
        <item name="fontPath">RobotoCondensed-Regular.ttf</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="android:background">@color/primary_dark</item>
        <item name="actionModeBackground">@color/primary_dark</item>
    </style>

    <style name="SectionHeader" parent="android:Widget.TextView">
        <item name="android:drawableBottom">@drawable/section_header</item>
        <item name="android:drawablePadding">@dimen/three_dips</item>
        <item name="android:layout_marginTop">@dimen/ten_dips</item>
        <item name="android:layout_marginBottom">@dimen/five_dips</item>
        <item name="android:paddingLeft">@dimen/ten_dips</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">@dimen/text_fourteen</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TimeTable" />
    <style name="TimeTable.Header">
        <item name="android:textColor">@drawable/item_label</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="TimeTable.Text">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:lines">1</item>
        <item name="android:padding">@dimen/three_dips</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@drawable/item_text</item>
    </style>

    <style name="Stage" />
    <style name="Stage.Hour">
        <item name="android:textColor">@drawable/item_label</item>
        <item name="android:textSize">@dimen/text_twenty</item>
    </style>
    <style name="Stage.Title">
        <item name="android:textColor">@drawable/item_text</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="Current" />
    <style name="Current.Label">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:layout_marginRight">@dimen/five_dips</item>
    </style>
    <style name="Current.LabelLeft">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_marginRight">@dimen/five_dips</item>
    </style>
    <style name="Current.Value">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>
    <style name="Current.ValueLeft">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primary_dark</item>
        <item name="android:background">@null</item>
    </style>

</resources>
